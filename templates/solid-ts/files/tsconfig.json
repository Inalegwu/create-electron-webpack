{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve"
  },
  "include": ["src"],
  "jsxImportSource": "solid-js",
  "types": ["solid-js", "solid-js/web"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
