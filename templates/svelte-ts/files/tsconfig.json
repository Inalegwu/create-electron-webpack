{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "preserveValueImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["svelte"]
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
